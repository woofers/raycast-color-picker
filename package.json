{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "color-picker",
  "title": "Color Picker",
  "description": "Raycast commands and menu bar icon to toggle color picker",
  "icon": "icon.png",
  "version": "1.0.0",
  "main": "index.js",
  "author": "jaxson",
  "license": "MIT",
  "categories": [
    "Design Tools"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Color picker menubar",
      "subtitle": "Opens the native macOS system color picker",
      "description": "Opens the native macOS system color picker",
      "mode": "menu-bar"
    },
    {
      "name": "command",
      "title": "Open color picker",
      "subtitle": "Opens the native macOS system color picker",
      "description": "Opens the native macOS system color picker",
      "mode": "no-view",
      "arguments": []
    }
  ],
  "preferences": [
    {
      "name": "colorFormat",
      "description": "ahh",
      "type": "dropdown",
      "required": true,
      "title": "Color Format",
      "default": "hex",
      "data": [
        { "title": "Hex", "value": "hex" },
        { "title": "Hex with Alpha", "value": "hexa" },
        { "title": "RGBA", "value": "rgba" },
        { "title": "RGBA (Percentage)", "value": "rgbap" },
        { "title": "HSL", "value": "hsl" },
        { "title": "HSL with Alpha", "value": "hsla" },
        { "title": "NSColor (macOS)", "value": "ns" },
        { "title": "UIColor (iOS)", "value": "ui" }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.0",
    "color": "^4.2.3",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/color": "^3.0.3",
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.7.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "format": "prettier --write \"{tests,src}/**/*.{js,mjs,ts,tsx}\""
  }
}
